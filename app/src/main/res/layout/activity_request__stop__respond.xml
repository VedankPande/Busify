<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Request_Stop_Respond"
    android:id="@+id/request_stop_respond_menu"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/passenger_actionBar"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            layout="@layout/action_bar_main"/>

        <RadioGroup
            android:layout_above="@id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/main_menu_radio_group">

            <RadioButton
                android:id="@+id/checkbox_do_not_show_buses"
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Don't show buses"/>

            <RadioButton
                android:id="@+id/checkbox_show_my_buses"
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show my bus"/>

            <RadioButton
                android:id="@+id/checkbox_show_all_buses"
                android:textColor="#FF0000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Show all buses" />

        </RadioGroup>

        <Button
            android:id="@+id/accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="86dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/style_floating_view"
            android:elevation="10dp"
            android:maxLines="1"
            android:paddingHorizontal="15dp"
            android:text="Accept"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText" />

        <Button
            android:layout_alignParentBottom="true"
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginBottom="8dp"
            android:layout_toEndOf="@id/accept"
            android:background="@drawable/style_floating_view"
            android:elevation="10dp"
            android:paddingHorizontal="15dp"
            android:text="reject"
            android:textAllCaps="false"
            android:textColor="@color/colorButtonText" />

        <fragment
            android:id="@+id/passenger_mapView"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="3dp"
            tools:context=".MapsActivity" />

    </RelativeLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/notif_navView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu_driver"
        android:layout_gravity="start"
        app:headerLayout="@layout/navigation_header">
    </com.google.android.material.navigation.NavigationView>


</androidx.drawerlayout.widget.DrawerLayout>