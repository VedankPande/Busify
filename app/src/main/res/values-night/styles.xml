<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name='windowNoTitle'>true</item>
        <item name="windowActionBar">false</item>
        <item name="homeAsUpIndicator">@drawable/round_arrow_back_black_18</item>
        <item name="android:statusBarColor">@color/colorStatusBar</item>
        <item name="drawerArrowStyle">@style/HamburgerStyle</item>
        <item name="colorControlNormal">@color/colorButtonText</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!--  Menu theme  -->
    <style name="MenuStyle" parent="Theme.AppCompat.Light">
        <item name="overlapAnchor">false</item>
        <item name="background">@color/colorBackground</item>
        <item name="elevation">3dp</item>
    </style>

    <style name="text_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>
    <style name="HamburgerStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/colorButtonText</item>
    </style>

</resources>
